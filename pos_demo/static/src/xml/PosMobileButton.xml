<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="PosMobileButton" t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('control-buttons')]" position="inside">
            <div t-on-click="onClick" class="control-button">
                <i class="fa fa-phone" />
                
                <span>Mobile Number</span>
            </div>
        </xpath>
    </t>
</templates>
